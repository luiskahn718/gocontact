<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @person.first_name %> <%= @person.last_name %>
</p>
<h4>Phone Nubmers</h4>
<ul>
  <% @person.phone_numbers.each do |phone| %>
    <li>
      <%= phone.number %>
      <%= link_to('edit', edit_phone_number_path(phone)) %>
      <%= link_to('delete', phone_number_path(phone), method: :delete, data: {confirm: 'Are you sure?'}) %>
    </li>
  <% end %>
</ul>

<h4>Email Addresses</h4>
<ul>
  <% @person.email_addresses.each do |email| %>
    <li>
      <%= email.address %>
      <%= link_to('edit', edit_email_address_path(email)) %>
      <%= link_to('delete', email_address_path(email), method: :delete, data: {confirm: 'Are you sure?'}) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add email address', new_email_address_path(person_id: @person.id) %> |
<%= link_to 'Add phone number', new_phone_number_path(person_id: @person.id) %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
